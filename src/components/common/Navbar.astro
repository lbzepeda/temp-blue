---
import { Image } from 'astro:assets';
import logo from './public/logo.png';

const NAVIGATION_ITEMS = [
  { href: '#home', label: 'Home' },
  { href: '#about', label: 'Nosotros' },
  { href: '#products', label: 'Productos' },
  { href: '#contact', label: 'Contáctanos' },
] as const;

const phoneNumber = '+505 8888-8888';
---

<header
  class="fixed top-0 left-0 right-0 bg-white dark:bg-slate-900 dark:border-slate-800 z-50"
>
  <div class="max-w-5xl mx-auto px-6">
    <nav class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/#home">
        <Image
          src={logo}
          alt="TempBlue Logo"
          width={300}
          height={80}
          class="h-8 w-auto md:h-10 lg:h-12 object-contain"
        />
      </a>
      <!-- Contact Button Mobile -->
      <a
        href={`tel:${phoneNumber.replace(/\D/g, '')}`}
        class="md:hidden font-mono text-sm px-3 py-1.5 rounded-lg border border-slate-200 dark:border-slate-700 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors text-slate-600 dark:text-slate-400"
      >
        {phoneNumber}
      </a>

      <!-- Hamburger Button -->
      <button
        id="menu-toggle"
        class="md:hidden p-2 text-slate-600 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white"
        aria-label="Toggle menu"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke-Linecap="round"
          stroke-Linejoin="round"
          stroke-Width="2"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path id="menu-icon" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8 ml-auto">
        {
          NAVIGATION_ITEMS.map((item) => (
            <a
              href={item.href}
              class="group relative text-sm text-slate-600 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white transition-colors"
            >
              <span>{item.label}</span>
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-slate-200 dark:bg-slate-700 group-hover:w-full transition-all duration-300" />
            </a>
          ))
        }
        <!-- Contact Button Desktop -->
        <a
          href={`tel:${phoneNumber.replace(/\D/g, '')}`}
          class="hidden md:flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-slate-600 dark:text-slate-400 border border-slate-200 dark:border-slate-700 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
        >
          <svg
            class="w-4 h-4"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path
              d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
            ></path>
          </svg>
          <span>{phoneNumber}</span>
        </a>
      </div>
    </nav>

    <!-- Mobile Navigation Menu -->
    <div
      id="mobile-menu"
      class="md:hidden fixed inset-0 top-16 bg-white dark:bg-slate-900 transition-transform duration-300 ease-in-out translate-y-full"
    >
      <div class="flex flex-col items-center pt-8 gap-8">
        {
          NAVIGATION_ITEMS.map((item) => (
            <a
              href={item.href}
              class="group text-lg text-slate-600 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white transition-colors"
            >
              <span>{item.label}</span>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</header>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');

  let isMenuOpen = false;

  menuToggle?.addEventListener('click', () => {
    isMenuOpen = !isMenuOpen;

    // Actualizar icono
    if (menuIcon) {
      menuIcon.setAttribute(
        'd',
        isMenuOpen ? 'M6 18L18 6M6 6l12 12' : 'M4 6h16M4 12h16M4 18h16'
      );
    }

    // Toggle menu
    mobileMenu?.classList.toggle('translate-y-full');
  });

  // Cerrar menú al hacer click en un enlace
  const mobileMenuLinks = mobileMenu?.querySelectorAll('a');
  mobileMenuLinks?.forEach((link) => {
    link.addEventListener('click', () => {
      isMenuOpen = false;
      mobileMenu?.classList.add('translate-y-full');
      if (menuIcon) {
        menuIcon.setAttribute('d', 'M4 6h16M4 12h16M4 18h16');
      }
    });
  });
</script>
