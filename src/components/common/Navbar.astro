---
import { Image } from 'astro:assets';
import logo from './public/logo.png';

const NAVIGATION_ITEMS = [
  { href: '#home', label: 'Home' },
  { href: '#about', label: 'Nosotros' },
  { href: '#products', label: 'Productos' },
  { href: '#contact', label: 'Cont√°ctanos' },
] as const;

const phoneNumber = '+505 8888-8888';
---

<header
  class="fixed top-0 left-0 right-0 z-50 bg-white/70 dark:bg-black/70 backdrop-blur-md"
>
  <div class="max-w-[1400px] mx-auto px-4 sm:px-6 lg:px-8">
    <nav class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/#home" class="flex-shrink-0">
        <Image
          src={logo}
          alt="TempBlue Logo"
          width={200}
          height={40}
          class="h-6 w-auto"
        />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-12">
        {
          NAVIGATION_ITEMS.map((item) => (
            <a
              href={item.href}
              class="text-sm font-light text-slate-600 dark:text-slate-300 hover:text-slate-900 dark:hover:text-white transition-all relative group"
            >
              {item.label}
              <span class="absolute -bottom-1 left-0 w-0 h-px bg-current transition-all group-hover:w-full" />
            </a>
          ))
        }
      </div>

      <!-- Contact Button Desktop -->
      <div class="hidden md:block">
        <a
          href={`tel:${phoneNumber.replace(/\D/g, '')}`}
          class="inline-flex items-center text-sm font-light text-slate-600 dark:text-slate-300 hover:text-slate-900 dark:hover:text-white transition-colors"
        >
          <svg
            class="w-4 h-4 mr-2"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path
              d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
            ></path>
          </svg>
          {phoneNumber}
        </a>
      </div>

      <!-- Mobile Elements -->
      <div class="flex md:hidden items-center gap-6">
        <!-- Mobile Contact -->
        <a
          href={`tel:${phoneNumber.replace(/\D/g, '')}`}
          class="text-slate-600 dark:text-slate-300"
        >
          <svg
            class="w-5 h-5"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path
              d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
            ></path>
          </svg>
        </a>

        <!-- Mobile Menu Button -->
        <button
          id="menu-toggle"
          class="text-slate-600 dark:text-slate-300"
          aria-label="Toggle menu"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            stroke-width="1.5"
          >
            <path
              id="menu-icon"
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </nav>

    <!-- Mobile Menu -->
    <div
      id="mobile-menu"
      class="hidden md:hidden absolute top-16 inset-x-0 bg-white/80 dark:bg-black/80 backdrop-blur-md"
    >
      <div class="px-4 py-8 space-y-6">
        {
          NAVIGATION_ITEMS.map((item) => (
            <a
              href={item.href}
              class="block text-lg font-light text-slate-600 dark:text-slate-300 hover:text-slate-900 dark:hover:text-white transition-colors"
            >
              {item.label}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</header>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');

  let isMenuOpen = false;

  menuToggle?.addEventListener('click', () => {
    isMenuOpen = !isMenuOpen;

    if (menuIcon) {
      menuIcon.setAttribute(
        'd',
        isMenuOpen ? 'M6 18L18 6M6 6l12 12' : 'M4 6h16M4 12h16M4 18h16'
      );
    }

    if (mobileMenu) {
      mobileMenu.style.display = isMenuOpen ? 'block' : 'none';
    }
  });

  const mobileMenuLinks = mobileMenu?.querySelectorAll('a');
  mobileMenuLinks?.forEach((link) => {
    link.addEventListener('click', () => {
      isMenuOpen = false;
      if (mobileMenu) {
        mobileMenu.style.display = 'none';
      }
      if (menuIcon) {
        menuIcon.setAttribute('d', 'M4 6h16M4 12h16M4 18h16');
      }
    });
  });
</script>
