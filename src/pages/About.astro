---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import Navbar from '@/components/common/Navbar.astro';
import Footer from '@/components/common/Footer.astro';

interface ValueCard {
  icon: string;
  title: string;
  description: string;
}

const values: ValueCard[] = [
  {
    icon: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z',
    title: 'Compromiso',
    description:
      'Dedicados a brindar soluciones personalizadas y servicio excepcional a cada cliente.',
  },
  {
    icon: 'M13 10V3L4 14h7v7l9-11h-7z',
    title: 'Innovación',
    description:
      'Adoptamos las últimas tecnologías para garantizar eficiencia y sostenibilidad.',
  },
  {
    icon: 'M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z',
    title: 'Calidad',
    description:
      'Seleccionamos los mejores sistemas y equipos del mercado para nuestros clientes.',
  },
  {
    icon: 'M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9',
    title: 'Sostenibilidad',
    description:
      'Comprometidos con soluciones eco-amigables para un futuro más sostenible.',
  },
];
---

<Layout title="Sobre Nosotros - TempBlue">
  <Navbar />
  <main class="pt-16 bg-slate-50 dark:bg-black">
    <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
      <!-- Hero Image -->
      <div class="mb-12 max-w-xl mx-auto">
        <h1 class="text-5xl font-bold text-slate-900 dark:text-white mb-6">
          Sobre Nosotros
        </h1>
        <div
          class="aspect-w-16 aspect-h-6 rounded-lg overflow-hidden shadow-md"
        >
          <Image
            src="/about-image.webp"
            alt="TempBlue Historia"
            width={500}
            height={188}
            class="object-cover w-full h-full"
          />
        </div>
      </div>

      <!-- Blog Header -->
      <header class="mb-16 text-center">
        <p
          class="text-xl text-slate-600 dark:text-slate-400 leading-relaxed max-w-3xl mx-auto"
        >
          En <span class="text-blue-600 font-semibold">Tempblue</span>, somos
          mucho más que una empresa de venta de aire acondicionado; somos
          expertos en soluciones de climatización que redefinen la experiencia
          del confort en hogares y negocios.
        </p>
      </header>

      <!-- Main Content -->
      <div class="prose prose-lg prose-slate dark:prose-invert mx-auto">
        <!-- Historia Section -->
        <section class="mb-16">
          <h2 class="text-3xl font-bold text-slate-900 dark:text-white mb-6">
            Nuestra Historia
          </h2>
          <p class="text-slate-600 dark:text-slate-400 leading-relaxed">
            <span class="text-blue-600 font-semibold">Tempblue</span> nació de la
            necesidad de ofrecer soluciones integrales en climatización, combinando
            experiencia técnica con un profundo enfoque en la satisfacción del cliente.
            Desde nuestros primeros días, nos hemos centrado en seleccionar los mejores
            sistemas de aire acondicionado del mercado, garantizando que nuestros
            clientes disfruten de equipos confiables, duraderos y eficientes.
          </p>
        </section>

        <!-- Mission & Vision Section -->
        <section class="mb-16">
          <div class="grid gap-12">
            <div
              class="bg-white dark:bg-slate-800/50 p-8 rounded-2xl shadow-sm"
            >
              <h2
                class="text-2xl font-bold text-slate-900 dark:text-white mb-4"
              >
                Nuestra Misión
              </h2>
              <p class="text-slate-600 dark:text-slate-400">
                Mejorar la calidad de vida de las personas a través de
                soluciones de climatización personalizadas y altamente
                eficientes. Creemos que un ambiente bien climatizado no solo
                mejora el confort, sino que también contribuye a la
                productividad, la salud y el bienestar general.
              </p>
            </div>

            <div
              class="bg-white dark:bg-slate-800/50 p-8 rounded-2xl shadow-sm"
            >
              <h2
                class="text-2xl font-bold text-slate-900 dark:text-white mb-4"
              >
                Nuestra Visión
              </h2>
              <p class="text-slate-600 dark:text-slate-400">
                Aspiramos a ser líderes en la industria de climatización,
                proporcionando soluciones innovadoras que mejoren la calidad de
                vida de nuestros clientes y contribuyan a un futuro más
                sostenible. Nuestra visión es crear espacios confortables,
                energéticamente eficientes y ecológicamente responsables.
              </p>
            </div>
          </div>
        </section>

        <!-- Values Section -->
        <section>
          <h2
            class="text-3xl font-bold text-slate-900 dark:text-white mb-8 text-center"
          >
            Nuestros Valores
          </h2>
          <div class="grid sm:grid-cols-2 gap-8">
            {
              values.map((value) => (
                <div class="bg-white dark:bg-slate-800/50 p-6 rounded-xl shadow-sm hover:shadow-md transition-shadow">
                  <div class="flex items-start space-x-4">
                    <div class="w-12 h-12 bg-blue-600/10 rounded-lg flex items-center justify-center flex-shrink-0">
                      <svg
                        class="w-6 h-6 text-blue-600"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d={value.icon}
                        />
                      </svg>
                    </div>
                    <div>
                      <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2">
                        {value.title}
                      </h3>
                      <p class="text-slate-600 dark:text-slate-400">
                        {value.description}
                      </p>
                    </div>
                  </div>
                </div>
              ))
            }
          </div>
        </section>
      </div>
    </article>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const navLinks = document.querySelectorAll('a[href^="#"]');

    navLinks.forEach((link) => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        window.location.href = '/' + link.getAttribute('href');
      });
    });
  });
</script>
