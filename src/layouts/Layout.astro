---
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';
import { SEO } from 'astro-seo';

interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
}

const {
  title,
  description = 'TempBlue - Expertos en climatización y aires acondicionados en Nicaragua. Instalación y mantenimiento de aire acondicionado residencial y comercial',
  image = '/imagen-social-default.webp',
  canonicalURL = Astro.url,
} = Astro.props;

// Create full title for SEO
const seoTitle = `${title} | TempBlue - Aire Acondicionado Nicaragua`;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <SEO
      title={seoTitle}
      description={description}
      canonical={canonicalURL}
      noindex={false}
      nofollow={false}
      openGraph={{
        basic: {
          title: seoTitle,
          type: 'website',
          image: image,
          url: Astro.url,
        },
        optional: {
          description: description,
          locale: 'es_NI',
          siteName: 'TempBlue',
        },
      }}
      twitter={{
        card: 'summary_large_image',
        title: seoTitle,
        description: description,
        image: image,
        imageAlt: 'TempBlue Nicaragua',
      }}
      extend={{
        meta: [
          {
            name: 'keywords',
            content:
              'aire acondicionado, climatización, Nicaragua, instalación aire acondicionado, mantenimiento aire acondicionado, TempBlue, sistemas de climatización',
          },
          {
            name: 'author',
            content: 'TempBlue',
          },
          {
            name: 'generator',
            content: Astro.generator,
          },
        ],
        link: [
          {
            rel: 'icon',
            type: 'image/png',
            href: '/favicon.png',
          },
        ],
      }}
    />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preload" as="image" href="/ac-temp-blue.webp" />
    <link rel="preload" href="/bento-imagen.webp" as="image" />
    <link
      href="https://api.fontshare.com/v2/css?f[]=cabinet-grotesk@800,500,700,400,300&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-white dark:bg-gray-900">
    <slot />
    <SpeedInsights />
    <Analytics />
  </body>
</html>

<style is:global>
  :root {
    --accent: #0891b2; /* Main color - Cyan 600 */
    --accent-light: #22d3ee; /* Cyan 400 */
    --accent-dark: #155e75; /* Cyan 800 */
  }

  html {
    @apply antialiased;
  }
</style>
