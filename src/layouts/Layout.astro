---
interface Props {
  title: string;
  description?: string;
}

const { 
  title,
  description = "TempBlue - Expertos en climatizaci√≥n y aires acondicionados"
} = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | TempBlue</title>
    <link
      href="https://api.fontshare.com/v2/css?f[]=cabinet-grotesk@800,500,700,400,300&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-white dark:bg-gray-900">
    <slot />
  </body>
</html>

<style is:global>
	:root {
		--accent: #0891b2; /* Main color - Cyan 600 */
		--accent-light: #22d3ee; /* Cyan 400 */
		--accent-dark: #155e75; /* Cyan 800 */
	}

	html {
		@apply antialiased;
	}
</style>